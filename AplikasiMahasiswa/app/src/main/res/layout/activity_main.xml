<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.gondar.listview_1.MainActivity"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tambah"
            android:src="@drawable/baseline_person_add_alt_1_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:src="@drawable/baseline_create_24"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tambah"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/del"
            android:src="@drawable/baseline_delete_forever_24"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/edit"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cari"
            android:src="@drawable/baseline_find_in_page_24"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/del"
            android:layout_toEndOf="@+id/del" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>